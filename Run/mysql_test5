SELECT  
G.*, B.NAME AS  BRAND_NAME, T.NAME AS  TYPE_NAME, C.NAME AS  CAT_NAME 
FROM  ES_GOODS G LEFT 
JOIN  ES_GOODS_CAT C ON  G.CAT_ID=C.CAT_ID 
LEFT JOIN  ES_BRAND B ON  G.BRAND_ID=B.BRAND_ID AND  B.DISABLED=0 
LEFT JOIN  ES_GOODS_TYPE T ON  G.TYPE_ID=T.TYPE_ID 
WHERE  G.DISABLED=0 
AND (G.NAME  LIKE '%%' OR  G.SN LIKE '%%' )
AND  MARKET_ENABLE!=2 
ORDER BY  GOODS_ID DESC  
LIMIT 0, 10;
